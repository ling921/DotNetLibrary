<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<RootNamespace>LingDev.EntityFrameworkCore.Audit</RootNamespace>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<DocumentationFile>LingDev.EntityFrameworkCore.Audit.xml</DocumentationFile>
		<Version>1.0.0</Version>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup>
		<AssemblyName>LingDev.EntityFrameworkCore.Audit</AssemblyName>
		<Title>LingDev.EntityFrameworkCore.Audit</Title>
		<Product>LingDev.EntityFrameworkCore.Audit</Product>
		<PackageTags>lingdev;ef;efcore;entityframework;entityframeworkcore;audit;</PackageTags>
		<Description>Automatic auditing system based on EntityFrameworkCore.</Description>
		<Authors>LingDev</Authors>
		<PackageId>LingDev.EntityFrameworkCore.Audit</PackageId>
		<Copyright>Copyright Â© 2022 Lingdev. All rights reserved.</Copyright>
		<NeutralLanguage>en</NeutralLanguage>
		<license>https://raw.githubusercontent.com/ling921/DotNetLibrary/master/LICENSE</license>
		<RootNamespace>LingDev.EntityFrameworkCore.Audit</RootNamespace>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/ling921/DotNetLibrary</PackageProjectUrl>
		<RepositoryUrl>https://github.com/ling921/DotNetLibrary</RepositoryUrl>
		<PackageIcon>icon.png</PackageIcon>
		<PackageReleaseNotes>Please Check [Release Notes](https://github.com/ling921/DotNetLibrary/tree/master/docs)</PackageReleaseNotes>
		<RepositoryType>Github</RepositoryType>
		<PackageOutputPath>.nuget</PackageOutputPath>
	</PropertyGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">
		<PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="6.0.6" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.6" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="LingDev.EntityFrameworkCore" Version="1.0.0" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="..\..\resources\icon.png" Link="icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</Content>
	</ItemGroup>

</Project>
